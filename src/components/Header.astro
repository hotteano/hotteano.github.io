---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<div class="search-container">
				<input
					type="text"
					id="search-input"
					placeholder="Search posts..."
					aria-label="Search blog posts by filename"
				/>
				<ul id="search-results"></ul>
			</div>
		</div>
		<div class="social-links">
			<a href="https://x.com/h_otteano" target="_blank">
				<span class="sr-only">Follow Astro on Twitter</span>
				<svg
					viewBox="0 0 16 16"
					aria-hidden="true"
					width="32"
					height="32"
					><path
						fill="currentColor"
						d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"
					></path></svg
				>
			</a>
			<a href="https://github.com/hotteano" target="_blank">
				<span class="sr-only">Go to Astro's GitHub repo</span>
				<svg
					viewBox="0 0 16 16"
					aria-hidden="true"
					width="32"
					height="32"
					><path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					></path></svg
				>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	.search-container {
		position: relative;
		display: inline-block;
		margin-left: auto; /* 这将使搜索框向右移动 */
	}

	#search-input {
		padding: 0.5em 1em; /* 增加左右内边距 */
		border: 1px solid #ddd;
		border-radius: 20px; /* 添加圆角 */
		width: 200px;
		transition: all 0.3s ease; /* 添加平滑过渡效果 */
		outline: none; /* 移除默认轮廓 */
	}

	#search-input:focus {
		border-color: var(--accent); /* 聚焦时改变边框颜色 */
		box-shadow: 0 0 0 2px rgba(var(--accent), 0.2); /* 添加聚焦效果 */
	}

	#search-results {
		position: absolute;
		top: 100%;
		right: 0; /* 将搜索结果对齐到右侧 */
		width: 230px; /* 固定宽度 */
		background: white;
		border: 1px solid #000000;
		border-radius: 16px; /* 添加圆角 */
		max-height: 350px;
		overflow-y: auto;
		z-index: 1000;
		display: none;
		list-style: none;
		padding: 0;
		margin: 0.5em 0 0 0; /* 添加顶部外边距 */
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); /* 添加阴影 */
	}
	#search-results li {
		padding: 0.5em;
		cursor: pointer;
		transition: all 0.2s ease;
		border-radius: 4px; /* 轻微圆角 */
		margin: 2px 0; /* 项间距 */
	}
	#search-results li:hover {
		background-color: #f5f5f5;
		transform: translateX(2px); /* 微右移动画 */
		transition: all 0.2s ease; /* 平滑过渡 */
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
		.search-container {
			display: none;
		}
	}
</style>

<script>
	document.addEventListener("DOMContentLoaded", async () => {
		const searchInput = document.getElementById(
			"search-input",
		) as HTMLInputElement;
		const searchResults = document.getElementById(
			"search-results",
		) as HTMLUListElement;

		if (!searchInput || !searchResults) return;

		interface Blog {
			title: string;
			url: string;
			lowercaseTitle: string;
		}

		let blogs: Blog[] = [];

		// 修正后的防抖函数
		const debounce = (func: Function, delay: number) => {
			let timeoutId: number | undefined;

			return (...args: any[]) => {
				window.clearTimeout(timeoutId);
				timeoutId = window.setTimeout(() => func(...args), delay);
			};
		};

		try {
			const response = await fetch("/api/get-posts.json");
			if (!response.ok) throw new Error("Failed to fetch blogs");

			blogs = await response.json();

			// 预处理标题
			blogs = blogs.map((blog) => ({
				...blog,
				lowercaseTitle: blog.title.toLowerCase(),
			}));
		} catch (error) {
			console.error("Blog loading error:", error);
			searchResults.innerHTML = `<li class="error">Failed to load search data</li>`;
			return;
		}

		const handleSearch = (query: string) => {
			if (query != null) query = query.trim().toLowerCase();
			searchResults.innerHTML = "";

			if (query.length < 2) return;

			const results = blogs.filter((blog) =>
				blog.lowercaseTitle.includes(query),
			); //在blog中查找标题

			if (results.length === 0) {
				searchResults.innerHTML =
					'<li class="no-results">No matching posts found</li>';
			} else {
				results.forEach((blog) => {
					const li = document.createElement("li");
					li.innerHTML = `<a href="${blog.url}">${blog.title}</a>`;
					searchResults.appendChild(li);
				});
			}

			searchResults.style.display = "block";
		};

		// 使用修正后的防抖函数
		searchInput.addEventListener(
			"input",
			debounce((e: Event) => {
				handleSearch((e.target as HTMLInputElement).value);
			}, 300),
		);

		document.addEventListener("click", (e) => {
			if (
				!searchInput.contains(e.target as Node) &&
				!searchResults.contains(e.target as Node)
			) {
				searchResults.style.display = "none";
			}
		});
	});
</script>
